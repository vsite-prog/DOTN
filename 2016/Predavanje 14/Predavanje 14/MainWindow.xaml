<Window x:Class="Predavanje_14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Predavanje_14"
        mc:Ignorable="d"
        Title="Naša aplikacija" Height="600" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Cut" CanExecute="Cut_CanExecute" Executed="Cut_Executed" />
        <CommandBinding Command="ApplicationCommands.Paste" CanExecute="Paste_CanExecute" Executed="Paste_Executed" />
    </Window.CommandBindings>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Azure" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="74*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Novi brod:" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.Column="0" Height="24" Width="134" RenderTransformOrigin="-0.054,-1.76" Margin="56,24,0,0"/>
        <TextBox x:Name="tb_brod" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="26,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
        <Button x:Name="button" Content="Dugme 1" Grid.Column="1" HorizontalAlignment="Left" Margin="26,71,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.115,0.012"/>
        <Button x:Name="button_Copy" Content="Dugme 2" Grid.Column="1" HorizontalAlignment="Left" Margin="140,71,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.115,0.012" Style="{StaticResource Bijelo}"/>
        <Button x:Name="button_Copy1" Content="Dugme 3" Grid.Column="1" HorizontalAlignment="Left" Margin="262,71,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.115,0.012" Background="Black"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="40,58,0,0" TextWrapping="Wrap" Text="{Binding ElementName=tb_brod, Path=Text}" VerticalAlignment="Top" Height="99" Width="112"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="51,73,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Background="Aqua"/>
        <Ellipse Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="163" Margin="217,26,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="226"/>
        <Button x:Name="button1" Content="Reži" Grid.Column="1" HorizontalAlignment="Left" Margin="51,121,0,0" VerticalAlignment="Top" Width="75" Command="ApplicationCommands.Cut"/>
        <Button x:Name="button1_Copy" Content="Lijepi" Grid.Column="1" HorizontalAlignment="Left" Margin="187,121,0,0" VerticalAlignment="Top" Width="75" Command="ApplicationCommands.Paste"/>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="97,26,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120">
            <TextBox.Triggers>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard >
                                <DoubleAnimation From="0" To="400" Duration="0:0:10" Storyboard.TargetProperty="Width" />
                                <DoubleAnimation From="20" To="150" Duration="0:0:10" Storyboard.TargetProperty="Height" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </TextBox.Triggers>
        </TextBox>

    </Grid>
</Window>
