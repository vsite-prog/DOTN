        <TextBox Name="tb_pojam" HorizontalAlignment="Left" Height="23" Margin="232,155,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Menu HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="792">
            <MenuItem Header="Zatvori " Click="zatvori_click" />
            <MenuItem Header="Složeni " >
                <MenuItem Header="Otvori novi prozor " Click="otvori_click" />
            </MenuItem>
        </Menu>


    </Grid>
</Window>
