<Window x:Class="Predavanje_14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="Close" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>
    <Window.Resources>
        <Style TargetType="Button" x:Key="VelikiFont">
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Azure" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Button Content="Zatvori" Grid.Row="0" Grid.Column="1" Command="Close" Width="76" Height="25"/>
        <TextBox HorizontalAlignment="Left" Height="127" Margin="27,0,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="454" Grid.ColumnSpan="2" Name="tb1">
            <TextBox.Triggers>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard >
                                <DoubleAnimation From="0" To="400" Duration="0:0:10" Storyboard.TargetProperty="Width" />
                                <DoubleAnimation From="20" To="150" Duration="0:0:10" Storyboard.TargetProperty="Height" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </TextBox.Triggers>
        </TextBox>
        <Button Content="Cut" HorizontalAlignment="Left" Margin="42,42,0,0" VerticalAlignment="Top" Width="75" Height="20" Command="Cut" CommandTarget="{Binding ElementName=tb1}" Style="{StaticResource VelikiFont}"/>
        <Button Content="Paste" HorizontalAlignment="Left" Margin="137,42,0,0" VerticalAlignment="Top" Width="75" Height="20" Command="Paste"  CommandTarget="{Binding ElementName=tb1}" />

    </Grid>
</Window>
