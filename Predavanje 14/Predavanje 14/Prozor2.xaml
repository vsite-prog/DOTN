<Window x:Class="Predavanje_14.Prozor2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Predavanje_14"
        mc:Ignorable="d"
        Title="Prozor2" Height="450" Width="800">
    <Grid>
        <Ellipse Width="20" Height="20" Fill="Aquamarine">
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent = "Window.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard >
                                <DoubleAnimation Storyboard.TargetProperty="Width" From = "20" To = "240" Duration = "0:0:10"	RepeatBehavior = "Forever"/>
                                <DoubleAnimation Storyboard.TargetProperty="Height" From = "20" To = "320" Duration = "0:0:6"	RepeatBehavior = "Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>

   </Grid>
</Window>
